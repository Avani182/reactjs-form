{
  "private": true,
  "name": "reactjs-use-form-monorepo",
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  },
  "version": "1.2.4",
  "description": "Reactive form management and input field validation hook",
  "author": "amiroff157",
  "license": "GPL-3.0",
  "homepage": "https://amiroff157.github.io/reactjs-use-form/",
  "repository": {
    "type": "git",
    "url": "https://github.com/amiroff157/reactjs-use-form"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish from-package --yes --no-verify-access",
    "test": "lerna run test --scope reactjs-use-form",
    "test:watch": "lerna run test:watch --scope reactjs-use-form",
    "build": "lerna run build --scope reactjs-use-form",
    "dev": "lerna run dev --scope  reactjs-use-form",
    "start:example": "lerna run start --scope reactjs-use-form-example",
    "build:example": "lerna run build --scope reactjs-use-form-example",
    "cleanup": "rm -rf node_modules/ dist/ packages/examples/node_modules/ packages/examples/build/ packages/main/node_modules/ packages/main/dist/",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "prepare": "is-ci || husky install"
  },
  "devDependencies": {
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "prettier": "2.3.2",
    "is-ci": "^3.0.0"
  },
  "keywords": [
    "react",
    "tyepscript",
    "react-testing-library",
    "react-hooks"
  ]
}
