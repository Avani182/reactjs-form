{
  "name": "reactjs-use-form",
  "workspaces": [
    "packages/examples/**"
  ],
  "version": "1.1.7",
  "description": "Reactive form management and input field validation hook",
  "author": "amiroff157",
  "license": "GPL-3.0",
  "homepage": "https://amiroff157.github.io/reactjs-use-form/",
  "repository": {
    "type": "git",
    "url": "https://github.com/amiroff157/reactjs-use-form"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "dev": "rollup -c -w",
    "build": "rollup -c && tsc -d --emitDeclarationOnly --noEmit false --declarationDir dist",
    "cleanup": "rm -rf node_modules/ dist/ packages/examples/node_modules/ packages/examples/build/",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@rollup/plugin-url": "^6.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "cross-env": "^7.0.3",
    "husky": "^7.0.1",
    "prettier": "2.3.2",
    "react": "^17.0.2",
    "react-scripts": "^4.0.3",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.26.9",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "typedoc": "^0.21.2",
    "typedoc-plugin-markdown": "^3.10.2",
    "typescript": "^4.3.5"
  },
  "keywords": [
    "react",
    "tyepscript",
    "react-testing-library",
    "react-hooks"
  ]
}
